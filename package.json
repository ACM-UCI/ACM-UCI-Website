{
    "name": "acm-reactify",
    "version": "0.1.0",
    "private": true,
    "homepage": "http://acm-uci.github.io",
    "dependencies": {
        "@emotion/react": "^11.10.0",
        "@emotion/styled": "^11.10.0",
        "@mui/icons-material": "^5.8.4",
        "@mui/material": "^5.10.0",
        "bootstrap": "^5.2.0",
        "classnames": "^2.3.1",
        "feather-icons": "^4.29.0",
        "firebase": "^9.9.2",
        "gh-pages": "^4.0.0",
        "konami": "^1.6.3",
        "node-sass": "^7.0.3",
        "prop-types": "^15.8.1",
        "react": "^18.2.0",
        "react-bootstrap": "^2.5.0",
        "react-dom": "^18.2.0",
        "react-konami-code": "^2.3.0",
        "react-markdown": "^8.0.3",
        "react-responsive-carousel": "^3.2.23",
        "react-router": "^6.3.0",
        "react-router-dom": "^6.3.0",
        "react-social-icons": "^5.14.0",
        "react-syntax-highlighter": "^15.5.0"
    },
    "scripts": {
        "build-css": "node-sass --include-path ./src/scss --include-path ./node-modules src/scss/ -o src/scss/",
        "watch-css": "npm run build-css && node-sass --include-path ./src/scss --include-path ./node-modules src/scss/ -o src/scss/ --watch --recursive",
        "start-js": "react-scripts start",
        "start": "npm-run-all -p watch-css start-js",
        "cp-cname": "cp CNAME build",
        "cp-404": "cp 404.html build",
        "build": "npm run build-css && react-scripts build && npm run cp-cname && npm run cp-404",
        "test": "react-scripts test --env=jsdom",
        "eject": "react-scripts eject",
        "format": "prettier --write '**/*.{js,jsx}'",
        "predeploy": "npm run build",
        "deploy": "gh-pages -d build -r https://github.com/acm-uci/acm-uci.github.io -b master"
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "lint-staged": {
        "*.{js,jsx,json}": [
            "npx prettier --write",
            "git add"
        ]
    },
    "devDependencies": {
        "eslint": "^8.22.0",
        "eslint-config-airbnb": "^19.0.4",
        "eslint-plugin-import": "^2.26.0",
        "eslint-plugin-jsx-a11y": "^6.6.1",
        "eslint-plugin-react": "^7.30.1",
        "eslint-plugin-react-hooks": "^4.6.0",
        "husky": "^1.3.1",
        "lint-staged": "^11.0.0",
        "npm-run-all": "^4.1.3",
        "prettier": "^2.7.1",
        "react-scripts": "^5.0.1"
    },
    "browserslist": [
        ">0.2%",
        "not dead",
        "not ie <= 11",
        "not op_mini all"
    ],
    "optionalDependencies": {
        "fsevents": "^2.3.2"
    }
}
