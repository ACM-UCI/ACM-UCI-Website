{
    "name": "acm-reactify",
    "version": "0.1.0",
    "private": true,
    "homepage": "http://clubs.uci.edu/acm",
    "dependencies": {
        "babel-plugin-prismjs": "^1.0.2",
        "bootstrap": "^4.1.3",
        "classnames": "^2.2.6",
        "googleapis": "^36.0.0",
        "hoek": "^4.2.1",
        "jquery": "^3.3.1",
        "node-sass": "^4.9.2",
        "prismjs": "^1.15.0",
        "react": "^16.4.1",
        "react-dom": "^16.4.1",
        "react-router": "^4.3.1",
        "react-router-dom": "^4.3.1",
        "react-scripts": "^2.1.3",
        "react-syntax-highlighter": "^8.1.0",
        "reactstrap": "^6.3.0",
        "readline": "^1.3.0"
    },
    "scripts": {
        "build-css": "node-sass --include-path ./src/scss --include-path ./node-modules src/scss/ -o src/scss/",
        "watch-css": "npm run build-css && node-sass --include-path ./src/scss --include-path ./node-modules src/scss/ -o src/scss/ --watch --recursive",
        "start-js": "react-scripts start",
        "start": "npm-run-all -p watch-css start-js",
        "build": "npm run build-css && react-scripts build",
        "test": "react-scripts test --env=jsdom",
        "eject": "react-scripts eject",
        "format": "prettier --write '**/*.{js,jsx}'"
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "lint-staged": {
        "*.{js,jsx,json}": [
            "prettier --write",
            "git add"
        ]
    },
    "devDependencies": {
        "husky": "^1.3.1",
        "lint-staged": "^8.1.0",
        "npm-run-all": "^4.1.3",
        "prettier": "^1.15.3"
    },
    "browserslist": [
        ">0.2%",
        "not dead",
        "not ie <= 11",
        "not op_mini all"
    ]
}
